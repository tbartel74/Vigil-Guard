{
  "manifest_version": 3,
  "name": "Vigil Guard AI Protection",
  "version": "0.7.0",
  "description": "Real-time AI prompt protection - detects and blocks malicious inputs before they reach your LLM (ChatGPT, Claude.ai)",
  "permissions": [
    "storage",
    "alarms"
  ],
  "storage": {
    "managed_schema": "managed_schema.json"
  },
  "host_permissions": [
    "http://localhost/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["src/content/overlay.js"],
      "css": ["src/content/overlay.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Vigil Guard Protection Status",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  }
}
