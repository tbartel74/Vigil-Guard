{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PII Configuration Schema",
  "description": "JSON Schema for pii.conf - regex fallback rules for PII detection",
  "type": "object",
  "required": ["rules"],
  "properties": {
    "rules": {
      "type": "array",
      "description": "List of regex-based PII detection rules",
      "items": {
        "type": "object",
        "required": ["name", "pattern", "target_entity"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Rule identifier (e.g., 'EMAIL', 'PESEL_HINTED')",
            "minLength": 1,
            "pattern": "^[A-Z_]+$"
          },
          "pattern": {
            "type": "string",
            "description": "JavaScript regex pattern for entity detection",
            "minLength": 1
          },
          "flags": {
            "type": "string",
            "description": "Regex flags (g, i, u, m)",
            "pattern": "^[gimu]*$",
            "default": "giu"
          },
          "replacement": {
            "type": "string",
            "description": "Redaction token or template (e.g., '[EMAIL]', '$1[PESEL]')"
          },
          "target_entity": {
            "type": "string",
            "description": "Presidio entity type this rule detects",
            "minLength": 1
          },
          "validator": {
            "type": "string",
            "description": "Optional validator name (e.g., 'pesel', 'nip', 'email')"
          },
          "validated": {
            "type": "boolean",
            "description": "Whether this rule has been validated"
          }
        },
        "additionalProperties": false
      }
    },
    "order": {
      "type": "array",
      "description": "Execution order of rules (rule names)",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}
