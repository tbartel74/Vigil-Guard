{
  "name": "vigil-guard-workflow",
  "version": "1.0.0",
  "description": "n8n workflow for Vigil Guard - Security testing suite",
  "type": "module",
  "engines": {
    "node": ">=18.0.0 <26.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "preinstall": "echo 'Installing with devDependencies...'",
    "postinstall": "echo 'Workflow dependencies installed successfully'",
    "pretest": "[ -d node_modules/vitest ] || npm install --silent",
    "test": "NODE_ENV=development npx vitest run",
    "test:watch": "NODE_ENV=development npx vitest",
    "test:ui": "NODE_ENV=development npx vitest --ui",
    "test:coverage": "NODE_ENV=development npx vitest run --coverage",
    "test:smoke": "NODE_ENV=development npx vitest run tests/e2e/smoke-services.test.js",
    "test:pii:fallback": "NODE_ENV=development npx vitest run tests/e2e/pii-detection-fallback.test.js",
    "test:language": "NODE_ENV=development npx vitest run tests/e2e/language-detection.test.js",
    "test:e2e": "NODE_ENV=development npx vitest run tests/e2e",
    "test:bypass": "NODE_ENV=development npx vitest run tests/e2e/bypass-scenarios.test.js",
    "test:owasp": "NODE_ENV=development npx vitest run tests/e2e/owasp-aitg-app-01.test.js tests/e2e/owasp-aitg-app-02.test.js tests/e2e/owasp-aitg-app-07.test.js",
    "test:input-validation": "NODE_ENV=development npx vitest run tests/e2e/input-validation.test.js",
    "benchmark": "node tests/benchmark/pattern-engine-benchmark.js",
    "benchmark:quick": "node tests/benchmark/pattern-engine-benchmark.js --samples=20 --warmup=5",
    "benchmark:full": "node tests/benchmark/pattern-engine-benchmark.js --samples=200 --warmup=20",
    "benchmark:compare": "node tests/benchmark/pattern-engine-benchmark.js --compare"
  },
  "overrides": {
    "glob": "^10.5.0",
    "inflight": "npm:noop2@2.0.0"
  },
  "keywords": [
    "n8n",
    "security",
    "prompt-injection",
    "testing"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "dotenv": "^17.2.3",
    "vitest": "^1.6.1"
  }
}
