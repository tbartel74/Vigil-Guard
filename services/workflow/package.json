{
  "name": "vigil-guard-workflow",
  "version": "1.0.0",
  "description": "n8n workflow for Vigil Guard - Security testing suite",
  "type": "module",
  "scripts": {
    "test": "npx vitest run",
    "test:watch": "npx vitest",
    "test:ui": "npx vitest --ui",
    "test:coverage": "npx vitest run --coverage",
    "test:e2e": "npx vitest run tests/e2e",
    "test:bypass": "npx vitest run tests/e2e/bypass-scenarios.test.js",
    "benchmark": "node tests/benchmark/pattern-engine-benchmark.js",
    "benchmark:quick": "node tests/benchmark/pattern-engine-benchmark.js --samples=20 --warmup=5",
    "benchmark:full": "node tests/benchmark/pattern-engine-benchmark.js --samples=200 --warmup=20",
    "benchmark:compare": "node tests/benchmark/pattern-engine-benchmark.js --compare"
  },
  "keywords": [
    "n8n",
    "security",
    "prompt-injection",
    "testing"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "dotenv": "^17.2.3",
    "vitest": "^1.6.1"
  }
}
